grecaptcha.ready(function() {
    getCaptchaToken();
});
function getCaptchaToken() {
	grecaptcha.execute('6LecbcQUAAAAABk0g3FMOxpg3Nbkpjp4eYDQqdDq', {action: 'forgot'}).then(function(token) {
		captcha = token;
    });
}
