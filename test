<script type="text/javascript" src="https://appleid.cdn-apple.com/appleauth/static/jsapi/appleid/1/en_US/appleid.auth.js"></script>
<script>

function initApple() {
	try {
		if(typeof AppleID != "undefined") {
			AppleID.auth.init({
				clientId : 'com.workiz.webapp',
				scope : 'email name',
				redirectURI : window.location.origin + "/login/",
				usePopup : true 
			});
			AppleID.auth.renderButton();

			//Listen for authorization success
			document.addEventListener('AppleIDSignInOnSuccess', (data) => {
				//handle successful response
				var token = data?.detail?.authorization?.id_token;
				var concatChar = window.location.href.indexOf("?") === -1 ? "?" : "&";
				$("._loginBtn").addClass("_isLoading");
				window.location.href += concatChar + "social=APPLE&token=" + token;
			});
		}
	} catch (e) {
		console.error("apple init failed")
		console.error(e)
	}
};

initApple();

</script>
