<script>

var captcha = "";
var login_error = '';
var ajax_path = 'https://app.workiz.com/ajax/password_forgot/';

function _loginBtn(){
	$("._loginBtn").addClass('_isLoading');
	$("#form-login").submit()
} 

function forgot(){
	$("._loginWrap").hide();
	$("._forgotWrap").show();
}

function _togglePassword(obj) {
	var p = document.getElementById('password');
	if($(obj).hasClass("workizIcon-eye")){
		$(obj).removeClass('workizIcon-eye');
		$(obj).addClass('workizIcon-eye-crossed');
		p.type = "text";
	}else{
		$(obj).removeClass('workizIcon-eye-crossed');
		$(obj).addClass('workizIcon-eye');
		p.type = "password";
	}
}

function checkMail(){
	$("#errLabelLostEmail").hide();
	var e = $("#lostEmail").val();
	if(e.trim() =="" || !isEmail(e.trim()))
	{
		$("#errLabelLostEmail").show();
		return;
	}
	var auth_type = $("#lostUser").val() == "" ? "quick" : "full";
	var p = "action=forgot_password&auth_type="+auth_type+"&mail="+e.trim()+"&captcha="+captcha+"&username_f="+$("#lostUser").val();
	$("._resetPassBtn").addClass('_isLoading');
	ajx_call(AJAX_PATH+"password_forgot/",p,function(json){
		if(json.flag)
		{
			showSuccess();
		}
		else{
			getCaptchaToken();
			if(json.err == "DUPLICATE")
			{
				$("#errLabelLostEmail").text('Email was not found, maybe you are using a user name?');
				$("#errLabelLostEmail").show();
				$("#lostUser").show();	
			}
			else{
				$("#errLabelLostEmail").text(json.msg);
				$("#errLabelLostEmail").show();
			}
		}
		$("._resetPassBtn").removeClass('_isLoading');
	})
}
function toggleLogin(){
	if (false) {
		// User got to the forgot password from the desktop phone, 
		// if he is already logged in - this will redirect him to the home page
		window.location.href = window.location.origin + window.location.pathname;
	} else {
		$("._forgotWrap").hide();
		$("._successWrap").hide();
		$("._loginWrap").show();
	}

}

function showSuccess(){
	$("._forgotWrap").hide();
	$("._successWrap").show();
}

function googleAuthSuccess(googleUser) {
	//Get token
	var token = googleUser.getAuthResponse().id_token;
	gapi.auth2.getAuthInstance().signOut();

	//Set url
	var concatChar = window.location.href.indexOf("?") === -1 ? "?" : "&";
	$("._loginBtn").addClass("_isLoading");
	window.location.href += concatChar + "social=GOOGLE&token=" + token;
}

function get(name){
   if(name=(new RegExp('[?&]'+encodeURIComponent(name)+'=([^&]*)')).exec(location.search))
      return decodeURIComponent(name[1]);
}

var googleUser = {};
var bindGoogleButton = function() {
	if(!document.getElementById('signUpGoogle')) return;
	gapi.load('auth2', function(){
		// Retrieve the singleton for the GoogleAuth library and set up the client.
		auth2 = gapi.auth2.init({
		client_id: '33225750211-077fd55i1b03pufvatbhuatrtrpvles5.apps.googleusercontent.com',
		cookiepolicy: 'single_host_origin',
		// Request scopes in addition to 'profile' and 'email'
		//scope: 'additional_scope'
		});
		attachSignin(document.getElementById('signUpGoogle'));
	});
};

function attachSignin(element) {
	auth2.attachClickHandler(element, {},
		function(googleUser) {
			googleAuthSuccess(googleUser)
		}, function(error) {
			alert(JSON.stringify(error, undefined, 2));
	});
}

